# {{ ansible_managed }}

## username to run sickrage under, the default is sickrage
{% if sickrage_user is defined %}
SB_USER={{ sickrage_user }}
{% else %}
#SB_USER= #$RUN_AS
{% endif %}

## the location of sickrage.py, the default is /opt/sickrage
SB_HOME={{ sickrage_install_dir }}

## the location of sickrage.db, cache, logs, the default is /var/sickrage
#SB_DATA= #$DATA_DIR

## the location of sickrage.pid, the default is /var/run/sickrage.pid
#SB_PIDFILE= #$PID_FILE

## the location of the python binary, the default is /usr/bin/python
#PYTHON_BIN= #$DAEMON

## extra cli option for sickrage, i.e. " --config_file=/home/sickrage/sickrage.ini"
#SB_OPTS= #$EXTRA_DAEMON_OPTS

## extra start-stop-daemon option like " --group=users"
#SSD_OPTS= #$EXTRA_SSD_OPTS
